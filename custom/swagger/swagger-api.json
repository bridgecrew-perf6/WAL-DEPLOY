{
  "openapi": "3.0.0",
  "info": {
    "title": "WAL API Document",
    "description": "왈 API docs 입니다.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "이메일 로그인",
        "produces": ["application/json"],
        "parameters": [{
          "name": "accesstoken",
          "in": "header",
          "schema": {
            "type": "string"
          }
        }, {
          "in": "body",
          "name": "body",
          "required": true,
          "schema": {
            "type": "object",
            "example": {
              "email": "abcd1234@test.com",
              "password": "1q2w3e4r!"
            }
          }
        }],
        "responses": {
          "201": {
            "description":"OK",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "status": 200,
                  "message": "로그인 성공",
                  "data": {
                    "nickname": "잔잔바리",
                    "accesstoken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6N~~",
                    "refreshtoken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpYX~~~",
                    "expiresIn": 1645349380
                  }
                }
              }
            }
          },
          "404": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "in": "header",
        "bearerFormat": "JWT"
      }
    }
  }
}